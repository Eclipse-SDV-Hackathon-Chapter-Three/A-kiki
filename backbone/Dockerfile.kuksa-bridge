# KUKSA-Zenoh Bridge
FROM localhost/police-base:latest

# Copy application files
COPY kuksa_zenoh_bridge.py /workspace/
COPY vss_police_schema.json /workspace/

# Set working directory
WORKDIR /workspace

# Health check - verify ROS2 node can be contacted
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD ros2 node list | grep -q kuksa_zenoh_bridge || exit 1

# Default command
CMD ["python3", "/workspace/kuksa_zenoh_bridge.py"]
