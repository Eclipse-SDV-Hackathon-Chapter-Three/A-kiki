# WebSocket Bridges (Camera and Police VSS)
FROM localhost/police-base:latest

# Copy application files
COPY camera_websocket_server.py /workspace/
COPY police_websocket_bridge.py /workspace/

# Set working directory
WORKDIR /workspace

# Expose WebSocket ports
EXPOSE 8080 8081

# Default command (will be overridden by Ankaios)
CMD ["python3", "/workspace/camera_websocket_server.py"]
